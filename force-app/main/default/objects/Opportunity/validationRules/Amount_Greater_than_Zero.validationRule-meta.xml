<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Amount_Greater_than_Zero</fullName>
    <active>true</active>
    <description>Amount for any Opportunity type should be greater than Zero</description>
    <errorConditionFormula>(Amount &lt;= 0 || ISBLANK(Amount))
&amp;&amp;  NOT($Permission.BypassValidationRules)</errorConditionFormula>
    <errorDisplayField>Amount</errorDisplayField>
    <errorMessage>Amount must be greater than $0</errorMessage>
</ValidationRule>
