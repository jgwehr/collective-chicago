<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <assignments>
        <description>Sets the Graduate&apos;s final Credit Score before Graduation to their most recent Credit Score from a Coaching Meeting</description>
        <name>Set_Credit_Score</name>
        <label>Set Credit Score</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>Credit_Score</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Get_Most_Recent_Coaching_Meeting_before_Graduation.Credit_Score__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Error_No_Coaching_Meetings</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </assignmentItems>
    </assignments>
    <decisions>
        <description>Did the Query find only one Coaching Meeting? It should have a Credit Score. If not, either the Graduate has no Coaching Meetings or none with a Credit Score.</description>
        <name>Found_only_one_Coaching_Meeting</name>
        <label>Found only one Coaching Meeting</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Found_only_one_Coaching_Meeting_Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Most_Recent_Coaching_Meeting_before_Graduation.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Credit_Score</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <description>Was the value provided for Graduate a Contact? Was a Graduate Date provided?</description>
        <name>Was_Input_Provided</name>
        <label>Was Input Provided?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Was_Input_Provided_Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Graduation_Date</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Graduate</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Graduate</leftValueReference>
                <operator>StartsWith</operator>
                <rightValue>
                    <stringValue>003</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Most_Recent_Coaching_Meeting_before_Graduation</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>Searches a Graduate&apos;s Coaching Meetings (usually upon Graduation) to determine their most recent Credit Score prior to Graduation.</description>
