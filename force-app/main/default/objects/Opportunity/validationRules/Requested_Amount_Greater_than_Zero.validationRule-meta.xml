<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Requested_Amount_Greater_than_Zero</fullName>
    <active>true</active>
    <description>Requested Amount for any Grant should be greater than Zero</description>
    <errorConditionFormula>(npsp__Requested_Amount__c &lt;= 0 ||  ISBLANK(npsp__Requested_Amount__c) )
&amp;&amp;  RecordType.DeveloperName == &quot;Grant&quot;
&amp;&amp;  NOT($Permission.BypassValidationRules)</errorConditionFormula>
    <errorDisplayField>npsp__Requested_Amount__c</errorDisplayField>
    <errorMessage>Requested Amount must be greater than $0</errorMessage>
</ValidationRule>
